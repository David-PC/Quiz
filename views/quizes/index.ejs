<form action='/quizes' method='GET'>
  Buscar pregunta
  <input type="text" name="busqueda" value=""/>
  <input type="submit" value="Buscar"/>
  <br/><br/>
  <hr/>
  <br/>
   <table>
   <tr>
     <th> Pregunta </th>
     <th> Tema </th>
   </tr>
    <% var i; for (i=0; i < quizes.length; i++) { %>        
    <tr>
      <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
      <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].tema %></a></td>
      <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
      <td>
        <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
          <button type="submit" onClick="return confirm('Desea borrar: <%= quizes[i].pregunta %>');">
            borrar
          </button>
        </form>
      </td>
    </tr> 
  <% } %>
</table>
<p/>
<a href="/quizes/new"><button>Crear pregunta</button></a>
</form>